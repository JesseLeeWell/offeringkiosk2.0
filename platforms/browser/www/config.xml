<?xml version='1.0' encoding='utf-8'?>
<widget id="com.continuetogive.kiosk" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Offering Kiosk</name>
    <description>
        Accept donations anywhere with Continue To Give's Offering Kiosk
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        Continue To Give Team
    </author>
    <content src="index.html" />
    <icon src="www/icon.png" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="permissions" value="none" />
</widget>
